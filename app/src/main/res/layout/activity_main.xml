<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="255dp"
         android:orientation="vertical"
         android:background="@color/colorPrimaryDark">
       <ImageView
           android:layout_width="220dp"
           android:layout_height="200dp"
           android:src="@drawable/logo"
           android:layout_marginTop="20dp"
           android:layout_gravity="center"

           />
     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true"
        >

        <EditText
            android:id="@+id/EditUsuario"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittext_modified_states"
            android:drawableLeft="@drawable/usuario24"
            android:drawablePadding="20dp"
            android:fontFamily="@font/roboto"
            android:hint="Usuario"
            android:lineSpacingExtra="24sp"
            android:paddingLeft="10dp"
            android:textSize="24sp"
            android:singleLine="true"/>


        <EditText
            android:id="@+id/EditContraseña"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_modified_states"
            android:drawableLeft="@drawable/constrasenia24"
            android:drawablePadding="20dp"
            android:fontFamily="@font/roboto"
            android:hint="Constraseña"
            android:inputType="textPassword"
            android:lineSpacingExtra="24sp"
            android:paddingLeft="10dp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonEnter"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_entrar"
            android:fontFamily="@font/roboto"
            android:onClick="logear"
            android:text="@string/btn_entrar"
            android:textColor="@color/icons"
            android:textSize="24sp"
            android:typeface="normal" />

        <CheckBox
            android:id="@+id/checkbox_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:clickable="false"
            android:duplicateParentState="false"

            android:fontFamily="@font/roboto"
            android:onClick="activarGuardarSesion"
            android:text="Recordar sesion"
            android:textColor="@color/secondary_text"
            android:textSize="22dp" />

    </LinearLayout>

    </LinearLayout>






